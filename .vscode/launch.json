    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
         {
            "name": "upgrade.py",
            "type": "debugpy",
            "request": "launch",
            "program": "src/upgrade.py",
            "console": "integratedTerminal",
            "args": ["*.md",
        "--source_dir", "kitten/content", "--overwrite"]
        },
         {
            "name": "update dates",
            "type": "debugpy",
            "request": "launch",
            "program": "src/update_dates.py",
            "console": "integratedTerminal",
            "args": ["kitten/content"]
        }
        ,
         {
            "name": "nagas upgrade .py",
            "type": "debugpy",
            "request": "launch",
            "program": "src/upgrade.py",
            "console": "integratedTerminal",
            "args": ["trade/Nagas.md",
        "--source_dir", "kitten/content", "--dest", "."]
        }
    ]
}